.pure-g.grid-columns-container
  .pure-u-1-8.side-columns
  .pure-u-3-4.login-box-positioner
    .sign-up-box.sign-up-column
      %h2 Write a message to #{@receiver.name}.

      / Will need instance variable for the recipient(s)
      = form_for [@receiver, @conversation], html: { class: "pure-form pure-form-aligned pure-control-group" } do |c|
        / %label.control-label Subject
        = c.text_field :subject, class: "input-field form-control", placeholder: "Subject"

        / %label.control-label Message
        = fields_for @conversation.messages.last do |m|
          = m.text_area :text, size: '24x6', class: "input-field form-control", placeholder: "Message"

        = c.button :submit, value: "Send message", class: "wizard-forward"
  .pure-u-1-8.side-columns
