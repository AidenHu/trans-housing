!!! 5
%html
  %head
    %title
      = full_title(yield(:title))
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Source+Sans+Pro:300|Cantata+One', rel: 'stylesheet', type: 'text/css'
    = stylesheet_link_tag 'http://yui.yahooapis.com/pure/0.6.0/pure-min.css', rel: 'stylesheet', type: 'text/css'
    = stylesheet_link_tag 'http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css', rel: 'stylesheet', type: 'text/css'
    = stylesheet_link_tag 'http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css', rel: 'stylesheet', type: 'text/css'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
  %body
    = render 'header'
    = yield
    = debug(params) if Rails.env.development?
    = console if Rails.env.development?