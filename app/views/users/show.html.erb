<% if params[:review_id] && params[:euid] && (@review = @user.reviews.detect { |r| r.id.to_s == params[:review_id] }) && @review.authenticated?(:token, params[:euid]) %>
 <h1>Write a review for <%= @user.name %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :review do |f| %>

      <%= hidden_field_tag :review_id, params[:review_id] %>
  
      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :text %>
      <%= f.text_field :text %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



<% else %>
 <h1><%= @user.name %></h1>
<% end %>