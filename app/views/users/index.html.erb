<% provide(:title, 'All users') %>

<h1>All Users</h1>

<%= form_tag users_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search %>
		<%= submit_tag "Search" %>
	</p>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<form class="sidebar-filters"
data-remote="true"
         id="space-index-filter-form">

  <h4 class="sidebar-section-header">Resources</h4>
    <div class="sidebar-section group">
      <%= checkbox_group collection: User.resources_list,
                         ul_class:   "checkbox-li",
                         html_name:  "users_filters[resources]" %>
    </div>

  <input type="submit" value="Filter" id="user-index-sidebar-filter-button">
</form>