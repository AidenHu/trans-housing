<% provide(:title, 'All users') %>

<h1>All Users</h1>

<%= form_tag users_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search %>
		<%= submit_tag "Search" %>
	</p>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>