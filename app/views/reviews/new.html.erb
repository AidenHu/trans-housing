<h1>Create Review</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :review do |f| %>
      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :text %>
      <%= f.text_field :text %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>